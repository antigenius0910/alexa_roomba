# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf
*.pxd text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Configuration files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
AUTHORS text eol=lf
CHANGELOG text eol=lf
CONTRIBUTING text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Templates
*.template text eol=lf

# Requirements
requirements*.txt text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# CI/CD
.travis.yml text eol=lf
.gitlab-ci.yml text eol=lf
Jenkinsfile text eol=lf

# GitHub specific
/.github/**/*.md text eol=lf
/.github/**/*.yml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.wav binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.7z binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Python compiled files
*.pyc binary
*.pyo binary
*.pyd binary

# Archives
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
docs/ export-ignore
examples/ export-ignore
.pytest_cache/ export-ignore
.coverage export-ignore
htmlcov/ export-ignore
*.log export-ignore

# Language statistics (linguist)
# Mark legacy code
legacy/* linguist-vendored
*.old linguist-vendored

# Mark documentation
docs/* linguist-documentation
*.md linguist-documentation

# Mark generated files
*.generated linguist-generated
