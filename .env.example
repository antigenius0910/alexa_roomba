# Alexa Roomba Configuration
# Copy this file to .env and customize for your environment

# Serial Port Configuration
# Linux: /dev/ttyUSB0 or /dev/ttyAMA0
# macOS: /dev/tty.usbserial
# Windows: COM3
ROOMBA_PORT=/dev/ttyUSB0
ROOMBA_BAUD_RATE=115200

# Alexa/Fauxmo Settings
FAUXMO_DEVICE_NAME="Stardust Destroyer"
FAUXMO_PORT=52000
FAUXMO_DEBUG=true

# Robot Operating Mode
# Options: SAFE_MODE, FULL_MODE, PASSIVE_MODE
DEFAULT_MODE=SAFE_MODE

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# Installation Directory (auto-detected if empty)
INSTALL_DIR=

# Python executable (auto-detected if empty)
PYTHON_EXEC=
